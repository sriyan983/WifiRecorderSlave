<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="111dp">

        <TextView
            android:id="@+id/ntpTimeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NTP sync pending from master app..." />

        <TextView
            android:id="@+id/enterIPLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter server IP address" />

        <EditText
            android:id="@+id/ipEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:hint="xxx.xxx.xxx.xxx" />

<!--        <Button-->
<!--            android:id="@+id/initTimeSyncButton"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Sync TIME WITH SERVER" />-->



        <Button
            android:id="@+id/startRecordingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect and record" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>